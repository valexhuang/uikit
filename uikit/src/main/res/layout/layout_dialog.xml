<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="57dp"
        android:background="@drawable/alert_dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="78dp"
        android:paddingLeft="21.33dp"
        android:paddingRight="21.33dp"
        android:paddingTop="23.33dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:alpha="0.9"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#000"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/dialog_editor"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/editor_border" />

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21.33dp"
            android:alpha="0.9"
            android:includeFontPadding="false"
            android:maxEms="14"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:singleLine="false"
            android:textColor="#000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dcdcdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53.33dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.9"
                android:clickable="true"
                android:gravity="center"
                android:textColor="#000" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#dcdcdc" />

            <TextView
                android:id="@+id/dialog_sure_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.9"
                android:clickable="true"
                android:gravity="center"
                android:textColor="#2979ff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>